<?xml version="1.0" encoding="UTF-8"?>
<project name="Backup Pro Unit Tests" default="move_zip" description="Runs tests against the compiled files to verify we have everything in place for distribution...">
	<target name="clean-cms-test" depends="clean-install">
		<phpunit 
			haltonfailure="true" 
			haltonincomplete="true"
			haltonskipped="true"
			haltonerror="true"
			printsummary="true" 
			bootstrap="../backup-pro-lib/tests/autoload.php"
			pharlocation="../backup-pro-lib/vendor/bin/phpunit"
		>
			<formatter type="plain" usefile="false"/>
			<batchtest>
				<fileset dir="../backup-pro-lib/tests">
					<include name="**/*Test.php"/>
					<exclude name="**/Browser/**"></exclude>
				</fileset>
				<fileset dir="../backup-pro-lib/tests/Browser/${mink_test_dir}">
					<include name="**/*Test.php"/>
				</fileset>
				
			</batchtest>
		</phpunit>		
	</target>
</project>